@model List<Movie>

    <h1>Index</h1>

    <table class="table table-bordered">
        <tr>
            <th>Title</th>
            @*<th></th>
            <th></th>
            <th></th>*@

        </tr>
        @foreach (var movie in Model)
        {
        <tr>
            <td>@movie.Title</td>
            @*<td>@student.LastName</td>
            <td>@student.Dob.ToShortDateString()</td>
            <td>@student.Gpa</td>*@
            <td><a href="MovieLab/DeleteMovie?id=@movie.Id" class="btn btn-danger">Delete @movie.Title</a></td>
            <td><a href="MovieLab/MovieForm?id=@movie.Id" class="btn btn-warning">Edit @movie.Title</a></td>
        </tr>
        }
    </table>

    <a href="MovieLab/MovieForm" class="btn btn-dark">Add a new Movie</a>
